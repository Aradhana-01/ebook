<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <title>admin-main-page</title>
         <!--script code-->
    <script type="text/javascript">
        function redirectAuthorToLogin() {
            location.href = "/login";
        }

        function redirectAuthorToSignup() {
            location.href = "/register";
        }

        function redirectAdminToLogin() {
            location.href = "/adminlogin";
        }

        function redirectAdminToSignup() {
            location.href = "/adminregister";
        }
        function deleteBox() {
        //   confirm ("Do you really want to Delete this Author ?");
          alert("Author Deleted Successfully !!")
        }
        </script>

    </head>

<body>

    <!-- nav bar -->

    <nav class="navbar navbar-expand-lg navbar-dark  bg-dark navbar-inverse navbar-fixed-top" data-bs-theme="dark">

        <div class="container-fluid  ">

            <img src="/images/e-book-logo.jpg" class="img1 navbar-brand" style="height:10%;width:15%;" alt=""
                id="logooo">
            <div class="row me-auto mb-2 mb-lg-0 " id="logo">
                <div class="col-md-12">
                    <h2><i><a href="#"
                                style="color:rgb(245, 238, 237) ;font-style: italic;font-family: 'Times New Roman', Times, serif;font-weight: 800;text-decoration: none;">Erudite</a></i>
                    </h2>
                    <p style="font-size: xx-small;">e-book creator</p>
                </div>
            </div>





            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                &emsp;&emsp;&emsp; <!--add 4 space-->
                <ul class="navbar-nav me-auto  mb-2 mb-lg-0  d-flex justify-content-center links"
                    style="margin-right: 30px;">


                    <li class="nav-item ">
                        <a class="nav-link active links" aria-current="page" href="#"><i class="bi bi-house-fill">
                                &nbsp; </i>Home</a>
                    </li>&emsp;
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="bi bi-telephone-fill">&nbsp;</i>Contact Us</a>
                    </li>&emsp;
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Dropdown
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li><a class="dropdown-item" href="#">Another action</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <!-- <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"> -->
                    <!-- Button trigger modal -->
                    <button class="btn btn-outline-light" type="button" data-bs-toggle="modal"
                        data-bs-target="#exampleModal1">Login</button>&nbsp;
                    <button class="btn btn-outline-light" type="button" data-bs-toggle="modal"
                        data-bs-target="#exampleModal2">Sign-Up</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Hey there!! Already have an Account? Login here</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-grid gap-2">

                        <button type="button" class="btn btn-secondary" onclick="redirectAdminToLogin() ">Login as
                            Admin</button>
                        <!-- <form action="/login">-->
                        <button type="button" class="btn btn-secondary" onclick="redirectAuthorToLogin()">Login As
                            Author</button>
                        <!---    </form> -->
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal fade" id="exampleModal2" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel"> New to Erudite ? Join the Writer's-Hub now!!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-grid gap-2">

                        <button type="button" class="btn btn-secondary" onclick="redirectAdminToSignup()">Sign-up as
                            Admin</button>
                        <button type="button" class="btn btn-secondary" onclick="redirectAuthorToSignup()">Sign-up As
                            Author</button>
                    </div>
                </div>

            </div>
        </div>
    </div>



<!--main content-->

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
       
               <!--if condition for error is missing-->
       <div class="table-responsive">
    

        <table class="table table-striped text-center">
            <thead>
                <tr class="table-dark">
                    <th>ID</th>
                    <th>Name</th>
                    <th>E-mail</th>
                    <th>pdf</th>
                    <th>Action</th>
                </tr>
            </thead>

           <tbody>
            <% if(record.length > 0) {%>
                <% record.forEach((element , index) =>{ %>

             <tr class="align-middle">
                 <td><%= (index+1) %></td>
                 <td><%= element.firstname  +" "+ element.lastname %></td>
                 <td><%= element.email %></td>
                 <td>pdf1</td>
                 <td>
                     <a href=" " class="text-success" ><i class="bi bi-pencil-square"></i></a>
                     <a href="/delete/<%= element._id %> " class="text-danger"  ><i class="bi bi-trash3-fill" onclick="deleteBox()"></i></a>
                 </td>
             </tr>
         
         
        <% }) %>
  
       
         </tbody>
       
       </table>
       <% }  else { %>   
        <h1 class="text-center text-secondary mt-5">No users Found!</h1>
        <% } %>





















       </div>



        </div>

    </div>

</div>






















































































































































































































